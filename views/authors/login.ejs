<%- include ../__header.ejs %>
<h1>Login</h1>
<h2 style="color:red"></h2>

<form action="/login" method = "post">
  <p>
    <label for="user">Username:</label> <input type="text" name="username" id="user" placeholder="username" autofocus>
  </p>
  <p>
    <label for="pass">Password:</label> <input type="password" name="password" id="pass" placeholder="*******">
  </p>
  <p>
    <input type="submit" value="Log In">
  </p>
</form>
<a href="/signup">Don't have an account? Create one here</a>


