<%- include ../__header.ejs %>

<h2> <%= author.dataValues.firstname %></h2>

<ul>
  <% posts.forEach(function(post){ %>
    <li> <a href="/posts/<%= post.dataValues.id %>" ><%= post.dataValues.title %></a></li>
  <% }) %>
</ul>

<a href="/authors/<%= author.dataValues.id %>/posts/new">Write a post for <%= author.dataValues.firstname %> </a>

<form class="delete" method="post" action="/authors/<%= author.dataValues.id %>?_method=delete"><button>Delete</button></form>
